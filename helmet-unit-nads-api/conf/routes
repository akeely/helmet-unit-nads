# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Game Collection APIs
GET		/game						controllers.GameCollection.find
POST	/game						controllers.GameCollection.save

# Game Resource APIs
GET		/game/:id					controllers.GameResource.find(id: Int)
GET		/game/:id/entry				controllers.GameResource.findEntries(id: Int)
POST	/game/:id/entry				controllers.GameResource.saveEntry(id: Int, entryType: Option[String])
GET		/game/:id/entry/current		controllers.GameResource.findCurrentEntry(id: Int)
GET		/game/:id/player			controllers.GameResource.findPlayers(id: Int)
POST	/game/:id/player			controllers.GameResource.savePlayer(id: Int)
PUT		/game/:id/player/:playerId	controllers.GameResource.updatePlayer(id: Int, playerId: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
